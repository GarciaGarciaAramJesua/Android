<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- T칤tulo principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游닇 Demostraci칩n de TextFields"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Descripci칩n -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los TextFields (EditText) permiten al usuario ingresar y editar texto. Son elementos fundamentales para formularios, b칰squedas y entrada de datos en aplicaciones Android."
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:textColor="#333333"/>

        <!-- Secci칩n de ejemplos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游꿢 Ejemplos Interactivos:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- TextField b치sico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. TextField B치sico:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe cualquier texto aqu칤..."
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"/>

        <!-- TextField para email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. TextField para Email:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ejemplo@correo.com"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"/>

        <!-- TextField para contrase침a -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. TextField para Contrase침a:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu contrase침a"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"/>

        <!-- TextField num칠rico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. TextField Num칠rico:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Solo n칰meros (ej: 123)"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"/>

        <!-- 츼rea de demostraci칩n interactiva -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游 Demo Interactiva:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnShowValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Valores Ingresados"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_500"/>

        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpiar Todos los Campos"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_200"/>

        <!-- 츼rea de resultados -->
        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los valores ingresados aparecer치n aqu칤..."
            android:textSize="14sp"
            android:background="#E8F5E8"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#2E7D32"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>
