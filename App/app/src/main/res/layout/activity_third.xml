<?xml version="1.0" encoding="utf-8"?>
<!-- filepath: d:\Android\AndroidStudioProjects\App\app\src\main\res\layout\activity_third.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#E8F5E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título del Activity -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🖼️ Galería de Imágenes"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🖼️ Bienvenido a la Galería!"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toca cualquier imagen para ver más información"
            android:textSize="14sp"
            android:textColor="#388E3C"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Grid de imágenes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📸 Colección de Iconos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <GridLayout
            android:id="@+id/gridImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Información de imagen seleccionada -->
        <TextView
            android:id="@+id/tvImageInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#1B5E20"
            android:background="#C8E6C9"
            android:padding="16dp"
            android:visibility="gone"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Botones de navegación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⬅️ Atrás"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnGoToMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠 Inicio"
                android:backgroundTint="#2E7D32"
                android:textColor="#FFFFFF"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Información del activity -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Este es el ThirdActivity - Galería\nUn activity independiente con su propio diseño y funcionalidad"
            android:textSize="12sp"
            android:textColor="#666666"
            android:background="#F1F8E9"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>