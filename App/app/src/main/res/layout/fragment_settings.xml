<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Elementos de Información"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Explicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los elementos de información muestran datos al usuario: TextView para texto, ImageView para imágenes, y ProgressBar para indicar progreso o carga de procesos."
            android:textSize="14sp"
            android:textColor="#424242"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Sección TextView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 TextView - Mostrar Texto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejemplos de TextView con diferentes estilos y propiedades:"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Ejemplos de TextView -->
        <TextView
            android:id="@+id/tvBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📌 TextView básico con texto normal"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvStyled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎨 TextView estilizado con colores y formato"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:background="#FFE1F3"
            android:padding="12dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 TextView dinámico - cambia cada 2 segundos"
            android:textSize="16sp"
            android:textColor="#FF5722"
            android:textStyle="italic"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Sección ImageView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🖼️ ImageView - Mostrar Imágenes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejemplos de ImageView con diferentes tipos de contenido:"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivIcon1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_dialog_info"
                android:background="#E3F2FD"
                android:padding="8dp"
                android:layout_margin="4dp" />

            <ImageView
                android:id="@+id/ivIcon2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:background="#FFF3E0"
                android:padding="8dp"
                android:layout_margin="4dp" />

            <ImageView
                android:id="@+id/ivIcon3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="#E8F5E8"
                android:padding="8dp"
                android:layout_margin="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnChangeImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔄 Cambiar Imágenes"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Sección ProgressBar -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏳ ProgressBar - Mostrar Progreso"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejemplos de ProgressBar con diferentes configuraciones:"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- ProgressBar horizontal con porcentaje -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Progreso Horizontal:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <ProgressBar
            android:id="@+id/progressBarHorizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="30"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvProgressPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- ProgressBar circular -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Progreso Circular (Carga):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressBarCircular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Controles de demostración -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎮 Controles Interactivos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStartProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶️ Iniciar"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnResetProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔄 Resetear"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Información de estado -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Estado: Listo para demostración"
            android:textSize="14sp"
            android:textColor="#2E7D32"
            android:background="#E8F5E8"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Instrucciones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Instrucciones:\n• TextView dinámico cambia automáticamente cada 2 segundos\n• Presiona 'Cambiar Imágenes' para rotar los iconos de ImageView\n• Usa 'Iniciar' para animar el ProgressBar hasta 100%\n• 'Resetear' vuelve el progreso a 0%"
            android:textSize="12sp"
            android:textColor="#666666"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>
