<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Tema Biblioteca Minimalista -->
    <style name="Base.Theme.Action" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Estados -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Formas con bordes suaves -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Action.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Action.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Action.LargeComponent</item>
        
        <!-- TipografÃ­a -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="fontFamily">sans-serif</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.Action" parent="Base.Theme.Action" />
    
    <!-- Formas con bordes suaves y elegantes -->
    <style name="ShapeAppearance.Action.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.Action.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Action.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <!-- Estilo para Cards minimalistas -->
    <style name="Widget.Action.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Estilo para Botones elegantes -->
    <style name="Widget.Action.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="Widget.Action.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="strokeColor">@color/primary</item>
    </style>
    
    <!-- Estilo para texto tipo Serif -->
    <style name="TextAppearance.Action.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.Action.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>