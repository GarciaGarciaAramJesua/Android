<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Número del jugador -->
        <TextView
            android:id="@+id/tvPlayerNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/player_number_bg"
            android:gravity="center"
            android:text="#13"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre del jugador -->
        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Brock Purdy"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/tvPlayerPosition"
            app:layout_constraintStart_toEndOf="@+id/tvPlayerNumber"
            app:layout_constraintTop_toTopOf="@+id/tvPlayerNumber" />

        <!-- Información adicional del jugador -->
        <TextView
            android:id="@+id/tvPlayerInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Starting Quarterback"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/tvPlayerName"
            app:layout_constraintStart_toStartOf="@+id/tvPlayerName"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayerName" />

        <!-- Posición del jugador -->
        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/position_badge"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="QB"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Stats del jugador (opcional) -->
        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvPlayerName"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayerInfo">

            <TextView
                android:id="@+id/tvStat1Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Height"
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvStat2Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weight"
                android:textColor="#999999"
                android:textSize="10sp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvStat3Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Experience"
                android:textColor="#999999"
                android:textSize="10sp"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/layoutStats"
            app:layout_constraintTop_toBottomOf="@+id/layoutStats">

            <TextView
                android:id="@+id/tvStat1Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6'1\"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStat2Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="220 lbs"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvStat3Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 years"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>