<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".NinersInfoActivity">

    <!-- StatusBar Background -->
    <View
        android:id="@+id/statusBarBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card Container Principal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMainContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBarBg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Imagen principal del equipo -->
            <ImageView
                android:id="@+id/iv49ersImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nfl_player_image"
                android:contentDescription="49ers Image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Overlay gradient en la imagen -->
            <View
                android:id="@+id/gradientOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/gradient_overlay"
                app:layout_constraintBottom_toBottomOf="@+id/iv49ersImage"
                app:layout_constraintEnd_toEndOf="@+id/iv49ersImage"
                app:layout_constraintStart_toStartOf="@+id/iv49ersImage"
                app:layout_constraintTop_toTopOf="@+id/iv49ersImage" />

            <!-- Título del equipo -->
            <TextView
                android:id="@+id/tv49ersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="San Francisco"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv49ersImage"
                app:layout_constraintStart_toStartOf="@+id/iv49ersImage" />

            <!-- Subtítulo del equipo -->
            <TextView
                android:id="@+id/tv49ersSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49ers"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:alpha="0.9"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/tv49ersTitle"
                app:layout_constraintTop_toBottomOf="@+id/tv49ersTitle" />

            <!-- Container del contenido -->
            <ScrollView
                android:id="@+id/scrollViewContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toTopOf="@+id/tabLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv49ersImage">

                <!-- ViewPager2 para fragments -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </ScrollView>

            <!-- TabLayout personalizado estilo botones -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/tab_background"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextColor="#666666"
                app:tabSelectedTextColor="#FFFFFF"
                app:tabRippleColor="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>