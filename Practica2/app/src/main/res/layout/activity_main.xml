<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_49ers"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.15"
        android:src="@drawable/logo_49ers"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Header con logo y título -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/nfl_logo"
        android:contentDescription="NFL Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE\nONE!"
        android:textSize="36sp"
        android:textColor="?attr/colorOnBackground"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:lineSpacingExtra="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="@+id/ivLogo"
        app:layout_constraintBottom_toBottomOf="@+id/ivLogo" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NFC WEST DIVISION"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <!-- Search Icon (decorativo) -->
    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:src="@android:drawable/ic_menu_search"
        android:contentDescription="Search"
        android:tint="#AAAAAA"
        app:layout_constraintEnd_toStartOf="@+id/ivMenu"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle" />

    <!-- Menu Icon (decorativo) -->
    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:contentDescription="Menu"
        android:tint="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle" />

    <!-- Switch para cambiar tema -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text=""
        android:thumb="@android:drawable/ic_partial_secure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle" />

    <!-- Indicador de swipe -->
    <TextView
        android:id="@+id/tvSwipeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Swipe to navigate →"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurface"
        android:alpha="0.7"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle" />

    <!-- Container principal para las cards -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerTeams"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSwipeHint">

        <!-- San Francisco 49ers Card - ACTIVA (más grande y centrada) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card49ersContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            app:cardBackgroundColor="#FFCC80"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv49ers"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo_49ers"
                    android:contentDescription="San Francisco 49ers"
                    app:layout_constraintBottom_toTopOf="@+id/tv49ers"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv49ers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAN FRANCISCO 49ERS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#AA0000"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv49ers" />

                <!-- Indicador de equipo activo -->
                <View
                    android:id="@+id/activeIndicator"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="@drawable/active_indicator"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv49ers" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Arizona Cardinals Card - INACTIVA (pequeña, esquina) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCardinalsContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="#FFB3C1"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            android:alpha="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_cardinals"/>
        </androidx.cardview.widget.CardView>

        <!-- Los Angeles Rams Card - INACTIVA (pequeña, esquina) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRamsContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="#B3E5FC"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            android:alpha="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_rams"/>
        </androidx.cardview.widget.CardView>

        <!-- Seattle Seahawks Card - INACTIVA (pequeña, esquina) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSeahawksContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="#81C784"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp"
            android:alpha="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_seahawks"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>